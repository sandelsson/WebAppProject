head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
block content
    main(class="container")
        h2=codesnippet
        div('hidden' id="snippet_id")=snippet_id
        div(id="comment_form_div")
            form(action="/posts/"+snippet_id id="comment-form" method="POST")
                label(for="comment") Comment
                br
                p('hidden' type="text" form="comment-form" name=snippet_id)
                //p('hidden' type="text" form="comment-form" name=current_user id="current_user")
                input(name="current_user", value="", id="current_user" 'hidden' )
                textarea(class="validate" name="comment" id="comment" form= "comment-form" style="height: 100px; width: 400px" placeholder="Write your comment here!")
                br
                input(type="submit" value="Submit" class="btn green")
        h2(style="font-weight: bold") Comments
            div(id="comments")
        

    script(src="/javascripts/codesnippet.js")